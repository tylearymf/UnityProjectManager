<Window x:Class="UnityProjectManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnityProjectManager"
        mc:Ignorable="d"
        Title="Unity Project Manager" Height="350" Width="525" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="unity3dIcon.ico">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="270" Width="497" SelectedCellsChanged="dataGrid_SelectedCellsChanged" >
            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="删除选中项" HorizontalAlignment="Left" Margin="240,285,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="delAll" Content="删除所有项" HorizontalAlignment="Left" Margin="340,285,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1,0.684" Foreground="Red" Click="delAll_Click"/>
        <Button x:Name="button_Copy" Content="刷新界面" HorizontalAlignment="Left" Margin="135,285,0,0" VerticalAlignment="Top" Width="75" Click="button_Copy_Click"/>

    </Grid>
</Window>
